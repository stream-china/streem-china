.item id="reply-#{reply.floor}" data-reply-floor="#{reply.floor}" data-reply-id="#{reply.id}"
  - if reply.deleted?
    .deleted =t('reply.floor_already_deleted', floor: reply.floor)
  - else
    .avatar
      = link_to user_path(reply.user_name) do
        = image_tag reply.user_avatar
    .info
      span.floor
        = reply.floor
        = t('activerecord.attributes.reply.floor')
      '  &middot;
      = link_to reply.user_name, user_path(reply.user_name), class: :username
      '
      = timeago_tag reply.created_at
    .tools
      .wrapper
        a.reply data-reply-floor='#{reply.floor}' data-reply-user-name='#{reply.user_name}'
          i.fa.fa-reply
        '
        - if signed_in? && reply.favorited_by?(current_user)
          a.favorited data-favoritable-id='#{reply.id}' data-favoritable-type='#{reply.class}'
            i.fa.fa-heart
              span.count =reply.favorites_count
        - else
          a.unfavorited data-favoritable-id='#{reply.id}' data-favoritable-type='#{reply.class}'
            i.fa.fa-heart-o
              span.count =reply.favorites_count
    .body
      = sanitize_body_html(reply.body_html)
    .admin
      .clearfix
        .right
          - if signed_in? && current_user.id.eql?(reply.user_id)
            = link_to edit_reply_path(reply) do
              i.fa.fa-pencil
            '
            = link_to '#', class: :delete do
              i.fa.fa-trash

