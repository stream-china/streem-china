.row.small-collapse.medium-uncollapse
  .large-8.large-offset-2.columns
    .box.devise-box
      .title
        h5 =t('register')
      = form_for(resource, url: registration_path(resource)) do |f|
        .row.small-collapse
          .small-9.small-offset-3.columns
            .small-12.columns
              = devise_error_messages!

          .clearfix
            .small-3.columns
              = f.label :name, class: 'right inline'
            .small-9.columns
              = f.text_field :name

          .clearfix
            .small-3.columns
              = f.label :email, class: 'right inline'
            .small-9.columns
              = f.email_field :email

          .clearfix
            .small-3.columns
              = f.label :password, class: 'right inline'
            .small-9.columns
              = f.password_field :password

          .clearfix
            .small-3.columns
              = f.label :password_confirmation, class: 'right inline'
            .small-9.columns
              = f.password_field :password_confirmation


          .small-9.small-offset-3.columns
            .small-6.columns
              = f.submit t('register'), class: 'button expand small', data: { disable_with: t('registering') }
            .small-6.columns
              = link_to t('sign_in'), new_user_session_path(resource), class: 'button expand small success'

      .row
        .columns
          .clearfix
            .right
              = link_to t('have_not_received_confirmation'), new_user_confirmation_path, class: 'resend-confirmation'

